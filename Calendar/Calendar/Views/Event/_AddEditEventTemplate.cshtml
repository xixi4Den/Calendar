<script type="text/ng-template" id="addEditEvent.html">
    <div class="modal-header">
        <h3 class="modal-title">{{title}}</h3>
    </div>
    <div class="modal-body">
        <input type="text" class="form-control" placeholder="Title" ng-model="event.title">
        <timepicker ng-model="event.startDate" ng-hide="noStartDate" hour-step="1" minute-step="5" show-meridian="true"></timepicker>
        <label><input ng-model="noStartDate" type="checkbox" class="form-control" />No end time</label>
        <timepicker ng-model="event.endDate" ng-hide="noEndDate" hour-step="1" minute-step="5" show-meridian="true"></timepicker>
        <label><input ng-model="noEndDate" type="checkbox" class="form-control" />No end time</label>
        <textarea ng-model="event.description" class="form-control" rows="3" placeholder="Description"></textarea>
    </div>
    <div class="modal-footer">
        <button ng-click="clickOk()" class="btn btn-primary">OK</button>
        <button ng-click="clickCancel()" class="btn btn-default">Cancel</button>
    </div>
</script>
